<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hotelScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/ic_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Bar -->
        <RelativeLayout
            android:id="@+id/headerBar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="Hotels"
                android:textSize="18sp"
                android:textColor="@color/black" />
        </RelativeLayout>

        <!-- Banner Image -->
        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_hotelbanner"
            app:layout_constraintTop_toBottomOf="@+id/headerBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Info Text -->
        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enter the information below to find available hotels."
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/headerImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/selectCityContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/editext_bg"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@+id/tvInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical">

            <!-- Text: Select City -->
            <TextView
                android:id="@+id/tvSelectedCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:text="Select City"
                android:textSize="16sp"
              />

            <!-- Dropdown Icon -->
            <ImageView
                android:id="@+id/ivDropdown"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dropdowen"
                android:contentDescription="Dropdown icon" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/dateContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/selectCityContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:weightSum="2">

            <!-- Check-in Container -->
            <LinearLayout
                android:id="@+id/checkInContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/editext_bg"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvCheckIn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Check-in"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/ivCheckInCalendar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calander"
                    android:contentDescription="Check-in calendar"/>
            </LinearLayout>

            <!-- Check-out Container -->
            <LinearLayout
                android:id="@+id/checkOutContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/editext_bg"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvCheckOut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Check-out"

                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/ivCheckOutCalendar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calander"
                    android:contentDescription="Check-out calendar"/>
            </LinearLayout>
        </LinearLayout>


        <!-- Room and Adults -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/roomAdultContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/dateContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/etRoom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Room"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:background="@drawable/editext_bg"
                android:padding="12dp"
                android:inputType="number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/etAdults"
                app:layout_constraintTop_toTopOf="parent"

                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etAdults"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Adults"
                android:background="@drawable/editext_bg"
                android:padding="12dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@id/etRoom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Children and Infants -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/childrenInfantsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/roomAdultContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/etChildren"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Children"
                android:background="@drawable/editext_bg"
                android:padding="12dp"
                android:inputType="number"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/etInfants"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp"
                />

            <EditText
                android:id="@+id/etInfants"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Babies"
                android:background="@drawable/editext_bg"
                android:padding="12dp"
                android:inputType="number"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/etChildren"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
               />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_search"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:text="Search"
            android:textSize="@dimen/_12sdp"
            app:cornerRadius="12dp"
            android:fontFamily="@font/poppins_regular"
            android:backgroundTint="#518EF8"
            android:textColor="@color/white"
            app:layout_goneMarginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/childrenInfantsContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
