<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    android:clickable="true"
    android:focusable="true">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/ll_top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transport Verification"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="@dimen/_50sdp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ll_top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/ll_transport_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Vehicle Image -->
            <ImageView
                android:id="@+id/iv_vehicle"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_bus" />

            <!-- Transport Name -->
            <TextView
                android:id="@+id/tv_transport_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Almas Transport"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingTop="16dp"
                android:fontFamily="@font/poppins_medium" />

            <!-- Owner -->
            <TextView
                android:id="@+id/tv_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Owner: Mr. Ali Khan"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular" />

            <!-- Vehicle Registration -->
            <TextView
                android:id="@+id/tv_vehicle_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration No: LEB-1234"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular" />

            <!-- Vehicle Type -->
            <TextView
                android:id="@+id/tv_vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Type: Hiace"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular" />

            <!-- Seats -->
            <TextView
                android:id="@+id/tv_vehicle_seats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seats: 15"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular" />

            <!-- Operating City -->
            <TextView
                android:id="@+id/tv_operating_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operating City: Swat"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular" />

            <!-- Contact Info -->
            <TextView
                android:id="@+id/tv_contact_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Information"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: ali.khan@example.com"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone: +92 300 1234567"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular" />

            <!-- Other Platform -->
            <TextView
                android:id="@+id/tv_platform_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other Platform Registered"
                android:textStyle="bold"  android:textColor="@color/black"
                android:paddingTop="16dp"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/tv_platform_name"
                android:layout_width="match_parent"  android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Registered on: BookMyBus"
                android:fontFamily="@font/poppins_regular" />

            <!-- Document Verification -->
            <TextView
                android:id="@+id/tv_document_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Document Verification"
                android:textStyle="bold"
                android:textSize="16sp"  android:textColor="@color/black"
                android:paddingTop="16dp"
                android:fontFamily="@font/poppins_medium" />

            <!-- CNIC -->
            <LinearLayout
                android:id="@+id/ll_cnic_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/iv_cnic"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_cnic"
                    android:contentDescription="CNIC" />

                <TextView
                    android:id="@+id/tv_cnic_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:text="CNIC Photo"  android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>

            <!-- Vehicle Registration Document -->
            <LinearLayout
                android:id="@+id/ll_registration_doc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/iv_registration_doc"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_doc"
                    android:contentDescription="Registration Document" />

                <TextView
                    android:id="@+id/tv_registration_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginStart="12dp"  android:textColor="@color/black"
                    android:text="Vehicle Registration Document"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>

            <!-- Buttons -->
            <!-- Buttons -->
            <LinearLayout
                android:id="@+id/ll_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_approve"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Approve"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#518EF8"
                    app:cornerRadius="8dp"
                    android:fontFamily="@font/poppins_medium" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reject"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Reject"
                    android:textColor="@color/red"
                    android:layout_marginStart="8dp"
                    android:strokeColor="@color/red"
                    app:cornerRadius="8dp"
                    android:fontFamily="@font/poppins_medium" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
