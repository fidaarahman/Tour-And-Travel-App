<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/ic_bg">



    <LinearLayout
        android:id="@+id/cardHotelRequests"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ic_bg_card"
        android:padding="16dp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_hotelrequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel Requests"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingBottom="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#568792" />

        <!-- Hotel 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Hotel Name : Almas Hotel"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve >"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#568792" />

        <!-- Hotel 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Hotel Name : Ocean View"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve >"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Transport Requests Card -->
    <LinearLayout
        android:id="@+id/cardTransportRequests"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ic_bg_card"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardHotelRequests"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_transportrequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transport Requests"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingBottom="12dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#568792" />


        <!-- Transport 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:layout_height="wrap_content"
                android:text="Driver Name : Alex Rider"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve >"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#568792" />

        <!-- Transport 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Driver Name : Sara Move"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve >"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
